<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.newsFeed.StoryPageController">
    <!-- Top: User ID -->
    <top>
        <Label fx:id="userIdLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10; -fx-text-fill: #3b5998; -fx-alignment: center;" text="User ID" BorderPane.alignment="CENTER" />
    </top>

    <!-- Center: Image List -->
    <center>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #f0f2f5; -fx-background-radius: 10px;">
            <ScrollPane fx:id="scrollPane" prefHeight="300.0" prefWidth="350.0" style="-fx-border-color: #ccc; -fx-background-color: transparent; -fx-background-radius: 10px; -fx-padding: 10px;">
                <content>
                    <!-- Image Container: Dynamically filled with images -->
                    <VBox fx:id="imageContainer" alignment="TOP_LEFT" spacing="15.0" style="-fx-padding: 10;" />
                </content>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom: Caption -->
    <bottom>
        <VBox spacing="15.0" style="-fx-padding: 20.0;" />
    </bottom>
</BorderPane>
