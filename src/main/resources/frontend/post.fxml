<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.contentCreation.PostController">

     <!-- Content Input -->
     <TextArea fx:id="contentArea" layoutX="59.0" layoutY="33.0" prefHeight="150.0" prefWidth="500.0" promptText="Write your post here..." style="-fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 5;" wrapText="true" />

     <!-- Image Selection -->
     <Button fx:id="uploadImage" layoutX="43.0" layoutY="250.0" prefWidth="150.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;" text="Upload Image" />

     <!-- Submit Button -->
     <Button fx:id="createPost" layoutX="43.0" layoutY="338.0" prefWidth="150.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;" text="Create Post" />
    <ScrollPane fx:id="scrollPane" layoutX="208.0" layoutY="188.0" prefHeight="300.0" prefWidth="350.0" style="-fx-border-color: #ccc;">
        <content>
            <VBox fx:id="imageContainer" alignment="TOP_LEFT" spacing="10.0" style="-fx-padding: 10;" />
        </content>
    </ScrollPane>

</AnchorPane>
