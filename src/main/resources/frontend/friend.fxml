<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="frontend.FriendController">
    <top>
        <HBox spacing="20.0" style="-fx-background-color: #3b5998; -fx-padding: 10.0;">
            <TextField fx:id="searchTextField" promptText="Search for friends..." style="-fx-pref-width: 300.0;"/>
            <Button text="Home" onAction="#onHome" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 14.0; -fx-font-weight: bold;"/>
            <Button text="Profile" onAction="#onProfile" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 14.0; -fx-font-weight: bold;"/>
            <Button text="NewsFeed" onAction="#onNewsFeed" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 14.0; -fx-font-weight: bold;"/>
            <Button text="Logout" onAction="#onLogout" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 14.0; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="20.0" style="-fx-background-color: #f0f2f5; -fx-padding: 10.0; -fx-pref-width: 200.0;">
            <Label text="Friend Suggestions" style="-fx-font-weight: bold;"/>
            <ListView fx:id="suggestionListView" />
            <Button text="Add Friend" onAction="#onAddFriendFromSuggestions"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 10.0;">
            <Label text="Friend Requests" style="-fx-font-weight: bold;"/>
            <HBox spacing="20.0">
                <VBox>
                    <Label text="Incoming Requests" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="friendRequestListView" style="-fx-pref-width: 200.0;"/>
                    <HBox spacing="10.0">
                        <Button text="Accept" onAction="#onAcceptRequest"/>
                        <Button text="Reject" onAction="#onRejectRequest"/>
                    </HBox>
                </VBox>
                <VBox>
                    <Label text="Pending Requests" style="-fx-font-weight: bold;"/>
                    <ListView fx:id="pendingFriendRequestListView" style="-fx-pref-width: 200.0;"/>
                </VBox>
            </HBox>

            <Label text="Friends" style="-fx-font-weight: bold;"/>
            <ListView fx:id="friendListView"/>
            <HBox spacing="10.0">
                <Button text="Block" onAction="#onBlockFriend" style="-fx-pref-width: 100.0;"/>
                <Button text="Remove" onAction="#onRemoveFriend" style="-fx-pref-width: 100.0;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
