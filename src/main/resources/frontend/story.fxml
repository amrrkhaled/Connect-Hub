<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.StoryController" style="-fx-background-color: #f2f2f2;">

    <!-- Title -->
    <Label layoutX="200.0" layoutY="20.0" text="Create Your Story" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Content Input -->
    <TextArea fx:id="contentArea" layoutX="50.0" layoutY="70.0" prefHeight="100.0" prefWidth="500.0"
              promptText="Write your story here..."
              style="-fx-font-size: 14px; -fx-border-color: #bbb; -fx-border-radius: 5; -fx-control-inner-background: white; -fx-text-fill: #333;"
              wrapText="true" />

    <!-- Image Selection -->
    <Button fx:id="uploadImage" layoutX="50.0" layoutY="200.0" prefWidth="180.0"
            style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;"
            text="Add Images" />

    <!-- Submit Button -->
    <Button fx:id="createStory" layoutX="250.0" layoutY="530.0" prefWidth="180.0"
            style="-fx-background-color: #000; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;"
            text="Share Story" />

    <!-- Scrollable Image Container -->
    <ScrollPane fx:id="scrollPane" layoutX="50.0" layoutY="250.0" prefHeight="260.0" prefWidth="500.0"
                style="-fx-border-color: #bbb; -fx-background-color: transparent;">
        <content>
            <VBox fx:id="imageContainer" alignment="TOP_LEFT" spacing="15.0"
                  style="-fx-padding: 10; -fx-background-color: #e6e6e6;" />
        </content>
    </ScrollPane>

</AnchorPane>
